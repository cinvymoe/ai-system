# 数据库配置
DATABASE_URL=sqlite:///./vision_security.db

# 摄像头监控配置
# 自动检查间隔（分钟）
CAMERA_CHECK_INTERVAL_MINUTES=5

# 摄像头连接超时（秒）
CAMERA_CHECK_TIMEOUT_SECONDS=5

# 是否启用自动监控（true/false）
ENABLE_AUTO_MONITORING=true

# 日志级别（DEBUG, INFO, WARNING, ERROR）
LOG_LEVEL=INFO

# 人员检测配置
# YOLOv5 模型路径（.rknn, .pt, 或 .onnx 格式）
# 示例: PERSON_DETECTION_MODEL_PATH=/path/to/yolov5.rknn
PERSON_DETECTION_MODEL_PATH=

# 人员检测间隔（秒）
PERSON_DETECTION_INTERVAL_SECONDS=30
